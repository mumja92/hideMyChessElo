{

  "manifest_version": 2,
  "name": "HideMyElo",
  "version": "0.1",

  "description": "Hides elo for chess.com",

  "icons": {
    "48": "icons/pepog-48.png",
    "96": "icons/pepog-96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.chess.com/*"],
      "js": ["hide_elo.js"]
    }
  ],

  "options_ui": {
      "page": "options.html"
  },

  "permissions": ["storage"],

  "browser_specific_settings": {
      "gecko": {
          "id": "hide@elo.com"
      }
  }

}

